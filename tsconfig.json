{
    "compilerOptions": {
        "module": "esnext",
        "target": "es5",
        "lib": [
            "es2015",
            "es2016",
            "es2017",
            "dom"
        ],
        "sourceMap": true,
        "allowSyntheticDefaultImports": true,
        "jsx": "react",
        "declaration": true,
        "declarationDir": "dist",
        "moduleResolution": "node",
        "esModuleInterop": true
    },
    "include": [
        "src",
        "./jest.setup.ts"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "src/**/*.stories.tsx",
        "src/**/*.test.tsx"
    ]
}